{
  "name": "jlobos-blog",
  "description": "jlobos.com (blog)",
  "scripts": {
    "dev": "next src",
    "build": "next build src && next export src -o out && cp src/public/* out",
    "start": "firebase serve",
    "test": "standard",
    "precommit": "lint-staged",
    "deploy": "npm run test && npm run build && firebase deploy"
  },
  "lint-staged": {
    "*.js": [
      "prettier --single-quote --no-semi --write",
      "standard --fix",
      "git add"
    ]
  },
  "dependencies": {
    "cookieconsent": "^3.0.4",
    "isomorphic-fetch": "^2.2.1",
    "moment": "^2.18.1",
    "next": "beta",
    "react": "^15.6.1",
    "react-disqus-comments": "^1.0.3",
    "react-dom": "^15.6.1"
  },
  "devDependencies": {
    "husky": "^0.14.3",
    "lint-staged": "^4.0.2",
    "prettier": "^1.5.3",
    "standard": "^10.0.2"
  }
}
